{
  "HTTP_PORT":"8080",
  "UDP_PORT":"9000",
  "name":"Polyptyque",
  "description":"Projet expérimental de portraits 3D hybrides",
  "shooting_timout":6000,
  "modules_hosts":[
    "master",
    "cm1","cm2","cm3","cm4","cm5","cm6","cm7","cm8","cm9"
  ],
  "default_responses":{
    "firstname":"none",
    "lastname":"none",
    "email":"none"
  },
  "steps":[
    {
      "topic":"Qui êtes vous ?",
      "fields":[
        {
          "id":"firstname",
          "type":"text",
          "placeholder":"Prénom"
        },
        {
          "id":"lastname",
          "type":"text",
          "placeholder":"Nom"

        },
        {
          "id":"email",
          "type":"text",
          "placeholder":"Adresse email"

        }
      ]
    },
     {
      "topic":"Quelle proposition vous définie le mieux ?",
      "fields":[
        {
          "id":"temper",
          "type":"radio",
          "choices":[
            {
              "value":"funny",
              "label":"Drôle"
            },
            {
              "value":"nice",
              "label":"Gentil(le)"
            },
            {
              "value":"smart",
              "label":"Intelligent(e)"
            },
            {
              "value":"helpful",
              "label":"Serviable"
            }
          ]
        }
      ]
    },
    {
      "topic":"Quelle est votre plus grande défaut ?",
      "fields":[
        {
          "id":"quality",
          "type":"radio",
          "choices":[
            {
              "value":"mytho",
              "label":"Mythomane"
            },
            {
              "value":"bad",
              "label":"Méchant(e)"
            },
            {
              "value":"rude",
              "label":"Malpoli(e)"
            },
            {
              "value":"vulgar",
              "label":"Vulgaire"
            }
          ]
        }
      ]
    },
    {
      "topic":"Quelle est votre occupation préférée ?",
      "fields":[
        {
          "id":"hobby",
          "type":"radio",
          "choices":[
            {
              "value":"sport",
              "label":"Faire du sport"
            },
            {
              "value":"food",
              "label":"Manger"
            },
            {
              "value":"music",
              "label":"Écouter de la musique"
            },
            {
              "value":"sleep",
              "label":"Dormir"
            }
          ]
        }
      ]
    },
    {
      "topic":"Vous préférez ?",
      "fields":[
        {
          "id":"prefer",
          "type":"radio",
          "choices":[
            {
              "value":"jump",
              "label":"Sauter par le fenêtre"
            },
            {
              "value":"poo",
              "label":"Manger vos excréments"
            },
            {
              "value":"naked",
              "label":"Courir tout nu dans la rue"
            },
            {
              "value":"burn",
              "label":"Vous bruler les doigts"
            }
          ]
        }
      ]
    },
    {
      "topic":"Quel serait le métier de vos rêves ?",
      "fields":[
        {
          "id":"job",
          "type":"radio",
          "choices":[
            {
              "value":"patissier",
              "label":"Pâtissier(ière)"
            },
            {
              "value":"rentier",
              "label":"Rentier(ière)"
            },
            {
              "value":"stewart",
              "label":"Stewart ou Hôtesse de l’air"
            },
            {
              "value":"stylist",
              "label":"Styliste"
            }
          ]
        }
      ]
    },
    {
      "topic":"Que feriez-vous pour de l’argent ?",
      "fields":[
        {
          "id":"money",
          "type":"radio",
          "choices":[
            {
              "value":"gofast",
              "label":"Faire un Go Fast"
            },
            {
              "value":"robbery",
              "label":"Participer à un braquage"
            },
            {
              "value":"drugs",
              "label":"Vendre de la drogue"
            },
            {
              "value":"kidnapping",
              "label":"Organiser un kidnapping"
            }
          ]
        }
      ]
    },
    {
      "topic":"Qui était Monsieur Lenain de Tillemont ?",
      "fields":[
        {
          "id":"lenaintillemon",
          "type":"radio",
          "choices":[
            {
              "value":"writer",
              "label":"Un écrivain"
            },
            {
              "value":"accordeonist",
              "label":"Un accordéoniste"
            },
            {
              "value":"historian",
              "label":"Un historien"
            },
            {
              "value":"trader",
              "label":"Un riche commerçant"
            }
          ]
        }
      ]
    },
    {
      "topic":"Que veut dire l’expression « être un narvalo » ?",
      "fields":[
        {
          "id":"narvalo",
          "type":"radio",
          "choices":[
            {
              "value":"mad",
              "label":"Être fou(olle)"
            },
            {
              "value":"robber",
              "label":"Être un voleur(euse)"
            },
            {
              "value":"kind",
              "label":"Être gentil(le)"
            },
            {
              "value":"fun",
              "label":"Être drôle"
            }
          ]
        }
      ]
    },
    {
      "topic":"Prise de vue",
      "fields":[
        {
          "id":"camera",
          "label":"Déclencher",
          "type":"camera-shooter",
          "description":"La prise de vue se déclenchera après 3 secondes d’attente"
        }
      ]
    }
  ]
}